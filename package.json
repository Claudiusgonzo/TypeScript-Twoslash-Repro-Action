{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "Verify Issues",
  "main": "lib/_main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "deploy": "yarn ncc build lib/_main.js --external typescript",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run deploy && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Orta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript/twoslash": "^0.5.2",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/lz-string": "^1.3.34",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/parser": "^3.5.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.4.0",
    "eslint-plugin-jest": "^23.18.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "jest-file-snapshot": "^0.3.8",
    "js-yaml": "^3.13.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^4.0.0-dev.20200705"
  }
}
